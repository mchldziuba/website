---
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/Button.astro';
import Underline from '../components/Underline.astro';
import Dots from '../components/Dots.astro';
import Header from '../components/Header.astro';
import { MouseIcon } from 'lucide-react';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Container from '../components/Container.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<Container>
		<div class="w-full mt-20 sm:mt-32 md:mt-40 lg:mt-56 flex items-center justify-center">
			<div class="relative">
				<Dots class="absolute hidden md:block -z-10 -right-10 top-0" />
				<h1 class="mb-7 font-medium tracking-wide text-center text-4xl leading-snug sm:text-5xl sm:leading-snug md:text-6xl md:leading-snug lg:text-7xl lg:leading-snug ">
					My name is <span class="text-primary">Micha≈Ç</span>.
					<br>
					I am <span class="relative">developer.<Underline class="w-full absolute -bottom-4 mt-4 right-0 -z-10" /></span>
				</h1>
				<p class="text-center text-slate-500 sm:text-lg md:text-xl">I am software developer based in Poland.</p>

				<div class="flex justify-center gap-4 mt-7">
					<Button>See projects</Button>
					<Button variant='bordered'>Contact</Button>
				</div>

				<div class="mt-24 flex flex-col items-center">
					<MouseIcon className="w-8 h-8 animate-bounce" />
				</div>
			</div>
		</div>
		</Container>
	</body>
</html>
