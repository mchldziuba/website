---
import Button from '../components/Button.astro';
import Underline from '../components/Underline.astro';
import Container from '../components/Container.astro';
import { getName } from '../consts';
import { Icon } from 'astro-icon/components';

---
<section id="hero" class="py-20 sm:py-32">
  <Container>
    <div class="w-full flex items-center justify-center">
      <div class="flex flex-col items-center">
        <h1 class="mb-7 font-semibold tracking-wide text-center text-5xl leading-tight md:text-7xl lg:text-8xl lg:leading-tight">
          Hello World<span class="text-primary">.</span>
          <br>
          My name is <span class="relative text-primary">{getName()}.<Underline class="text-accent w-full absolute -bottom-3 right-0 -z-10" /></span>
        </h1>

        <p class="text-slate-700 text-center md:text-xl max-w-[700px] mt-2">
          Node.js developer and open source contributor passionate about building efficient and scalable solutions.
        </p>

        <div class="flex sm:justify-center gap-4 mt-8">
          <Button size='lg' onclick="location.href='#showcase'">
            See projects
          </Button>
          <Button size="lg" onclick="location.href='#contact'" variant='bordered'>
            Contact
          </Button>
        </div>

        <div class="mt-24 flex flex-col items-center">
          <Icon name="lucide:mouse" class="w-8 h-8 animate-bounce mb-6" />
          
          <svg width="16" class="h-24" viewBox="0 0 16 115" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.29289 114.707C7.68341 115.098 8.31658 115.098 8.7071 114.707L15.0711 108.343C15.4616 107.953 15.4616 107.319 15.0711 106.929C14.6805 106.538 14.0474 106.538 13.6568 106.929L8 112.586L2.34314 106.929C1.95262 106.538 1.31945 106.538 0.928928 106.929C0.538403 107.319 0.538403 107.953 0.928927 108.343L7.29289 114.707ZM7 -4.37114e-08L7 114L9 114L9 4.37114e-08L7 -4.37114e-08Z" fill="#181818"/>
          </svg>
  
        </div>
      </div>
    </div>
  </Container>
</section>
